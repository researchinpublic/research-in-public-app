{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MemoryNode",
  "type": "object",
  "properties": {
    "node_id": {
      "type": "string"
    },
    "content": {
      "type": "string"
    },
    "node_type": {
      "type": "string",
      "enum": ["struggle", "insight", "breakthrough", "topic", "question"]
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "required": ["node_id", "content", "node_type", "timestamp"]
}

